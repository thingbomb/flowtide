{
  "name": "flowtide",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,html,json,css,yml}\"",
    "build:firefox": "turbo build:firefox --filter=@flowtide/new-tab",
    "build:chrome": "turbo build:chrome --filter=@flowtide/new-tab",
    "build:web": "turbo build:web --filter=@flowtide/new-tab",
    "build:lander": "turbo build:lander --filter=@flowtide/www"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-classnames": "^0.7.6",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
